generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

// ELECTION TABLE - Stores different elections 
model Election {
  id         Int         @id @default(autoincrement())        // Primary Key 
  name       String
  date       DateTime
  isActive   Boolean     @default(false)                      // Only one election should be active at a time 
  createdAt  DateTime    @default(now())
  candidates Candidate[]                                      // an election can have many candidates so by the using command election.candidates youbcan get all candidates in the array
}

// WARD TABLE - Chicago specifically has 50 wards 
model Ward {
  id         Int         @id @default(autoincrement())
  number     Int         @unique                      // This should only go up to 50
  name       String                                   // every ward has a neighborhood name 
  candidates Candidate[]
  users      User[]                                   // A ward can have many users(residents)
}

// CANDIDATE TABLE - Stores people running for alderman 
model Candidate {
  id         Int                 @id @default(autoincrement())
  name       String
  bio        String?              // I made this an optional because every candidate might not have a bio
  imageUrl   String
  website    String
  wardId     Int                 // Foreign Key that stores which ward this candidate is running in
  ward       Ward                @relation(fields: [wardId], references: [id])
  electionId Int
  election   Election            @relation(fields: [electionId], references: [id])
  dataSource String              @default("MANUAL")
  externalId String?             @unique
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  positions  CandidatePosition[]

  @@unique([wardId, electionId, name])          // This prevents the same person from running twice in the same ward in the same election
}

// POLICY TABLE - Stores policy statements/questions 
model Policy {
  id                 Int                 @id @default(autoincrement())
  statement          String                                           //ex."wants to increase funding for schools"
  category           String?                                          // helps organize policies
  order              Int                 @default(0)
  isActive           Boolean             @default(true)               // useful for when we want to remove outdated policies
  createdAt          DateTime            @default(now())
  candidatePositions CandidatePosition[]                              // one policy can have many candidate positions
  responses          Response[]
}

// CANDIDATE POSITION TABLE - Links candidates to their stance on each policy (just a JOIN table)
model CandidatePosition {
  id          Int       @id @default(autoincrement())

  candidateId Int
  candidate   Candidate @relation(fields: [candidateId], references: [id]) // links to candidate table 

  policyId    Int
  policy      Policy    @relation(fields: [policyId], references: [id]) // links to policy table 

  stance      String                            //"for", "against"

  @@unique([candidateId, policyId])             // each candidate can have one stance per policy
}

// USER TABLE - Stores people taking the survey
model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique                      
  name      String

  wardId    Int?
  ward      Ward?      @relation(fields: [wardId], references: [id])

  createdAt DateTime   @default(now())
  responses Response[]
}
// RESPONSE TABLE - Stores user answers to policy questions (where we track what users think about policies)
model Response {
  id         Int      @id @default(autoincrement())

  userId     Int
  user       User     @relation(fields: [userId], references: [id])

  policyId   Int
  policy     Policy   @relation(fields: [policyId], references: [id])

  answer     String
  answeredAt DateTime @default(now())

  @@unique([userId, policyId])                  // each usre can only answer each policy question once 
}